[Unit]
Description=CompanyAI Backend Service
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/companyai
Restart=always
RestartSec=3

# Environment Variables
Environment=DATABASE_URL=postgresql+asyncpg://companyai:your_secure_password@localhost:5433/companyai
Environment=SECRET_KEY=your-production-secret-key-companyai-2026-very-long-random-string
Environment=OLLAMA_BASE_URL=http://127.0.0.1:11434
Environment=LLM_MODEL=qwen2.5:7b
Environment=DEBUG=true
Environment=PYTHONUNBUFFERED=1

ExecStart=/opt/companyai/venv/bin/uvicorn app.main:app --host 0.0.0.0 --port 8000

[Install]
WantedBy=multi-user.target
